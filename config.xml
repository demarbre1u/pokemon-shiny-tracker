<?xml version='1.0' encoding='utf-8'?>
<widget id="com.demarbre.allan" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Shiny Tracker</name>
    <description>
        An App to track your shiny hunts.
    </description>
    <author email="demarbreallan.dev@gmail.com" href="https://github.com/demarbre1u/">
        Allan DEMARBRE
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="/src/assets/icons/shiny-charm.png" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
